<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摄像头控制"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_selected_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择要控制的摄像头"
        android:textSize="14sp"
        android:background="@drawable/bg_info_card"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摄像头列表："
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/lv_cameras"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/divider_line"
        android:dividerHeight="1dp"
        android:background="@drawable/bg_list"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_test_access"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="测试访问"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_button_info" />

        <Button
            android:id="@+id/btn_block_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="阻止访问"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_button_danger" />

        <Button
            android:id="@+id/btn_unblock_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="恢复访问"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_button_success" />

    </LinearLayout>

</LinearLayout>